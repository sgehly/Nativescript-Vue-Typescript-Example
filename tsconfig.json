{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"noEmitOnError": true,
		"lib": [
			"es6",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"*": [
				"./node_modules/tns-core-modules/*",
				"./node_modules/*"
			]
		}
	},
	"files": [
		"typings/nativescript-vue.d.ts",
		"typings/vue.d.ts",
		"typings/sfc.d.ts",
	],
	"exclude": [
		"node_modules",
		"platforms"
	]
}